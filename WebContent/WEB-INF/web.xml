<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
 <servlet>
  <display-name>Login</display-name>
  <servlet-name>Login</servlet-name>
  <servlet-class>com.secret.action.Login</servlet-class>
 </servlet>
 <servlet>
  <display-name>SendPass</display-name>
  <servlet-name>SendPass</servlet-name>
  <servlet-class>com.secret.action.SendPass</servlet-class>
 </servlet>
 <servlet>
  <display-name>UploadContacts</display-name>
  <servlet-name>UploadContacts</servlet-name>
  <servlet-class>com.secret.action.UploadContacts</servlet-class>
 </servlet>
 <servlet>
  <display-name>Timeline</display-name>
  <servlet-name>Timeline</servlet-name>
  <servlet-class>com.secret.action.Timeline</servlet-class>
 </servlet>
 <servlet>
  <display-name>GetComment</display-name>
  <servlet-name>GetComment</servlet-name>
  <servlet-class>com.secret.action.GetComment</servlet-class>
 </servlet>
 <servlet>
  <display-name>PubMessage</display-name>
  <servlet-name>PubMessage</servlet-name>
  <servlet-class>com.secret.action.PubMessage</servlet-class>
 </servlet>
 <servlet>
  <display-name>PubComment</display-name>
  <servlet-name>PubComment</servlet-name>
  <servlet-class>com.secret.action.PubComment</servlet-class>
 </servlet>
 <servlet>
  <display-name>MyMessage</display-name>
  <servlet-name>MyMessage</servlet-name>
  <servlet-class>com.secret.action.MyMessage</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>Login</servlet-name>
  <url-pattern>/login</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>SendPass</servlet-name>
  <url-pattern>/send_pass</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>UploadContacts</servlet-name>
  <url-pattern>/upload_contacts</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>Timeline</servlet-name>
  <url-pattern>/timeline</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>GetComment</servlet-name>
  <url-pattern>/get_comment</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>PubMessage</servlet-name>
  <url-pattern>/publish</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>PubComment</servlet-name>
  <url-pattern>/pub_comment</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>MyMessage</servlet-name>
  <url-pattern>/my_message</url-pattern>
 </servlet-mapping>
 <welcome-file-list>
  <welcome-file>index.jsp</welcome-file>
 </welcome-file-list>
 <login-config>
  <auth-method>BASIC</auth-method>
 </login-config>
</web-app>
